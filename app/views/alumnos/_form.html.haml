= form_for @alumno do |f|
  -if @alumno.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alumno.errors.count, "error")} prohibited this alumno from being saved:"
      %ul
        - @alumno.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :fecha_nacimiento
    = f.date_select :fecha_nacimiento
  .field
    = f.label :documento
    = f.text_field :documento
  .field
    = f.label :maestra_id
    = f.text_field :maestra_id
  .actions
    = f.submit 'Save'
