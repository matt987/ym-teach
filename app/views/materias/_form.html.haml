= form_for @materia do |f|
  -if @materia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@materia.errors.count, "error")} prohibited this materia from being saved:"
      %ul
        - @materia.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :descripcion
    = f.text_field :descripcion
  .actions
    = f.submit 'Save'
